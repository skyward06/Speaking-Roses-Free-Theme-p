    }
    .template-collection .collection-filter__dropdown {
      margin: 4px 12px 0 0;
      background-position: 92% 19px;
      background-size: 16px;
    }

    {% comment %} Product Card {% endcomment %}
    .template-collection .collection-template-wrapper .product-card__grid-item-image-wrapper{
      padding-top: 108.1%;
      border-radius: 0px 0px 9.519px 9.519px;
      background: #FFF;
    }
    .template-collection .grid-uniform--s3 .product-card__grid-item{
      border-radius: 8px;
      border: 0.952px solid #E8E8E8;
      background: #EDEDED;
      box-shadow: 0px 2.85577px 11.42308px 0px rgba(0, 0, 0, 0.00);
      flex-basis: 32%;
    }
    .template-collection .product-card__reviews{
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 5px;
      margin-left: 10px;
    }
    .template-collection .product-card__reviews svg{
      width: 64px; 
    }
    .template-collection .product-card__reviews svg path{
      fill: #FF9900;
    }
    .template-collection .product-card__reviews span{
      font-size: 10px;
      margin: 0 0 1.7px 0.7px;
    }
    .template-collection .product-card__item-title{
      margin: 6.8px 0px 0 3px;
    }
    .template-collection .product-card__item-price-wrapper{
      margin: 2.5px 0 5.5px 3.4px;
    }
    .template-collection .product-card__item-price .money{
