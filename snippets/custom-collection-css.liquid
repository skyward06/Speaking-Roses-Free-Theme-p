      color:#A84F65;
    }
    .template-collection .collection-page__grid-products.grid-uniform--s3{
      gap: 24px 13px;
    }
    .template-collection .collection-page__loading-more-wrapper {
      padding: 0 4px 0 0;
      margin-top: 28px;
    }
    .template-collection .loading-more__progress-label,
    .template-collection .loading-more__progress-bar {
      display: none;
    }
    .template-collection .collection-page__loading-more {
      padding: 7px 11px;
      background: #fff;
      color: #000;
      border: 1px solid #000;
    }
    .template-collection .collection-page__wrapper {
      padding-bottom: 29px;
    }
    .template-collection .collection-page__items--loaded {
      font-size: 16px;
    }

    {% comment %} Content {% endcomment %}
    .template-collection .collection-page__content{
      width: 77.4%;
      margin: 1px 0 0;
    }

    {% comment %} Accordion {% endcomment %}
    .template-collection .accordion-text__section {
      padding: 36px 0 33.3px;
    }
    .template-collection .accordion-text__content,
    .template-collection .accordion-text__content * {
      font-size: calc(16px + (19 - 16) * ((100vw - 768px) / (1440 - 768)));
      margin-bottom: 16px;
      word-spacing: 0;
      letter-spacing: 0.6574px;
    }
    .template-collection .accordion-text__title {
      margin: 10px 0 35px;
      padding: 0 0 0 0;
      font-size: 36.5px;
      letter-spacing: 0.2px;
    }
