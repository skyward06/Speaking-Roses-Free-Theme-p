<!-- snippets/custom-collection-css -->
{%- capture collection_css -%}
  <style>
    {% comment %} Banner {% endcomment %}
    .template-collection .collection-banner{
      padding-top: 31.4%;
    }
    .template-collection .collection-banner-wrapper {
      position: relative;
      max-height: 452px;
    }
    .template-collection .collection-banner__header-group {
      position: absolute;
      top: calc(49% + 1px);
      transform: translate(2.5%, -60%);
      width: 100%;
      max-width: 1120px;
    }
    .template-collection .collection-banner__title {
      font-size: calc(16px + (42 - 16) * ((100vw - 375px) / (1440 - 375)));
      font-family: 'Luxia';
      line-height: 1.3;
      text-shadow: 2px 1px 4px #000;
      color: #fff;
      letter-spacing: 0.6px;
    }
    .template-collection .metafield-rich_text_field {
      font-size: calc(22px + (30 - 22) * ((100vw - 768px) / (1440 - 768)));
      letter-spacing: -0.1px;
      line-height: 1.4;
      max-width: 500px;
    }
    .template-collection .metafield-rich_text_field ul{
      list-style: none;
    }
    .template-collection .metafield-rich_text_field ul > li:before {
      content: '';
      display: inline-block;
      width: 5px;
      height: 5px;
      background: #fff;
      border-radius: 100%;
      margin: 0 6px 4px 1px;
      text-shadow: 2px 1px 4px #000;
    }

    {% comment %} Filter {% endcomment %}
    .template-collection .collection-page__filter-wrapper {
      margin-left: 3px;
    }
    .template-collection .collection-filter__item {
      position: relative;
      top: -1px;
    }
    .template-collection .collection-facets__icon {
      cursor: pointer;
    }
    .template-collection .collection__filter-icon-wrapper {
      padding: 0;
    }
    .template-collection .collection-facets__item-summary {
      padding: 13px 18px 9px 1px;
    }
    .template-collection .collection-facets__item-values {
      margin: 4px auto 17px;
      padding: 0 0 0 1px;
    }
    .template-collection .collection-facets__item-value {
      text-transform: capitalize;
    }
    .template-collection .collection-facets__item-value input[type='checkbox'] {
      min-width: 15px;
      min-height: 16px;
      margin-right: 5px;
    }
    .template-collection .collection-facets__item-label {
      font-size: 14px;
      word-break: break-word;
      letter-spacing: 0.1px;
      color: #595959;
      font-weight: 500;
    }
    .template-collection .collection-facets__item-value:not(:last-child) {
      margin-bottom: 11px;
    }
    .template-collection .item--list--color .item-fieldset--color .collection-facets__item-value{
      margin-bottom: 11px;
    }
    .template-collection .item--list--quantity .item-fieldset--quantity .collection-facets__item-value{
      margin-bottom: 11px;
    }
    .template-collection .collection-facets__item:not(:first-child) {
      padding: 9px 0 0;
    }
    .template-collection .collection-facets__item--list.item--list--color{
      transform: translateY(-11px);
    }
    .template-collection .collection-facets__item--list.item--list--quantity{
      padding: 0;
    }
    .template-collection .collection-facets__item--list.item--list--color .collection-facets__item-summary{
      padding: 13px 0px 2px 1px;
    }
    .template-collection .collection-facets__item--list.item--list--quantity .collection-facets__item-summary{
      padding: 0px 0px 2px 1px;
    }
    .template-collection .collection-facets__item--price-range .range-slider-track {
      height: 3px;
      margin: 1px 0 0 0;
    }
    .template-collection .collection-facets__item--price-range input[type=range]::-webkit-slider-thumb {
      width: 21px;
      height: 21px;
    }
    .template-collection .collection-facets__item--price-range .collection-facets__item-values {
      padding: 0;
    }
    .template-collection .collection-facets__item--price-range .collection-facets__item-summary {
      padding: 13px 0 13px 1px;
    }
    .template-collection .collection-facets__item--price-range .collection-facets__item-box {
      font-size: 14px;
      width: 86px;
      padding: 1px 0 0 0px;
      letter-spacing: 0.3px;
      color: #595959;
      font-weight: 500;
    }
    .template-collection .collection-facets__item--price-range .collection-facets__item-box-wrapper {
      width: 210px;
      gap: 0px 1px;
      justify-content: flex-start;
