      "author": {
        "@type": "Person",
        "name": {{ article.author | json }}
      },
      "publisher": {
        "@type": "Organization",
        "name": {{ shop.name | json }},
        "logo": {
          "@type": "ImageObject",
          "url": "{{ settings.share_image | image_url: width: 200, height: 200 }}",
          "width": 200,
          "height": 200
        }
