<!-- start snippets/standart-products-highlights -->

<style>
    .std-prod-highlights__left,
    .std-prod-highlights__right{
        display: flex;
        align-items: center;
        text-align: center;
        gap: 20px;
        width: 100%;
        height: 100%;
    }

    .std-prod-highlights__right {
        background-color: #FAFAFA;
    }

    .std-prod-highlights__left {
        justify-content: flex-end;
    }

    .products-highlights__content.content--two-products .std-prod-highlights__right .products-highlights__hero-product {
        margin-left: 17%;
    }

    .products-highlights__content.content--two-products .std-prod-highlights__left .products-highlights__hero-product {
        margin-right: 17%;
    }

    .std-prod-highlights__title,
    .std-prod-highlights__subtitle,
    .std-prod-highlights__link {
        color:#555555;
    }

    .std-prod-highlights__title {
        font-size: 26px;
        line-height: 34px;
    }

    .std-prod-highlights__subtitle,
    .std-prod-highlights__link {
        font-size: 18px;
    }

    .std-prod-highlights__subtitle {
        line-height: 24px;
        width: 279px;
        margin-top: 8px;
    }

    .std-prod-highlights__link {
        text-decoration: underline;
    }

    @media(max-width: 767px) {
        .std-prod-highlights__left,
        .std-prod-highlights__right {
            gap: 15px;
        }

        .std-prod-highlights__title {
            font-size: 20px;
        }

        .std-prod-highlights__subtitle {
            font-size: 14px;
            width: 220px;
            margin-top: 0;
        }

        .std-prod-highlights__placeholder-img {
            width: 222px;
            height: 240px;
        }

        .std-prod-highlights__link {
            font-size: 16px;
        }
    }
        
    @media(max-width: 479px) {

        .std-prod-highlights__title,
        .std-prod-highlights__link {
            font-size: 14px;
        }

        .std-prod-highlights__title {
            line-height: 26px;
        }
        .std-prod-highlights__subtitle {
            font-size: 12px;
            width: 144px;
            line-height: 12px;
        }
        .std-prod-highlights__placeholder-img {
            width: 145px;
            height: 157px;
        }
        .std-prod-highlights__left,
        .std-prod-highlights__right {
            gap: 10px;
        }
    }
</style>

{% capture standartProductsHighlights %}
    <div class="std-prod-highlights__text">
        <h4 class="std-prod-highlights__title">Lorem Ipsum</h4>
        <p class="std-prod-highlights__subtitle">Lorem Ipsum Dolor Sit Amet Consectetur</p>
    </div>
    <div class="products-highlights__product-image-content">
        <img class="std-prod-highlights__placeholder-img"src="{{ 'icon-default-placeholder.svg' | asset_url }}" alt="Placeholder Image">
    </div>
    <a class="std-prod-highlights__link" href="#">Lorem Ipsum</a>
{% endcapture %}

<div class="std-prod-highlights__left products-highlights__item ">
    <div  class="products-highlights__hero-product">
        <div class="products-highlights__hero-product-content">
            {{ standartProductsHighlights }}
        </div>
    </div>
</div>   
<div class="std-prod-highlights__right products-highlights__item ">
    <div  class="products-highlights__hero-product">
        {{ standartProductsHighlights }}
    </div>
</div>     