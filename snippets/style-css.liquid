    --h2Size: {{ settings.typography_h2_font_size }}px;
    --h2SizeTablet: {{ settings.typography_h2_font_size_tablet }}px;
    --h2SizeMobile: {{ settings.typography_h2_font_size_mobile }}px;
    --h2Color: {{ settings.color_h2 }};
    --h3Size: {{ settings.typography_h3_font_size }}px;
    --h3SizeTablet: {{ settings.typography_h3_font_size_tablet }}px;
