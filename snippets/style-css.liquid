    --AddToCartFontSize: {{ settings.add_to_cart_font_size }}px;
    --AddToCartTextTransform: {{ settings.add_to_cart_text_transform }};
    --AddToCartBorderRadius: {{ settings.add_to_cart_radius }}px;
    --AddToCartTextColor: {{ settings.product_add_to_cart_text_color }};
