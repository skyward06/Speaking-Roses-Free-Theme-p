    --ProductTitleFontSize: {{ settings.product_title_font_size }}px;
    --ProductSubtitleFontSize: {{ settings.product_subtitle_font_size }}px;
    --ProductTitleFontSizeTablet: {{ settings.product_title_font_size_tablet }}px;
    --ProductSubtitleFontSizeTablet: {{ settings.product_subtitle_font_size_tablet }}px;
    --ProductTitleFontSizeMobile: {{ settings.product_title_font_size_mobile }}px;
    --ProductSubtitleFontSizeMobile: {{ settings.product_subtitle_font_size_mobile }}px;
