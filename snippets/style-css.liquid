    --progressATCBackgroundColor: {{ settings.product_atc_background_color }};
    --thankYouTextColor: {{ settings.thank_you_text_color }};
    --CouponTextColor: {{ settings.coupon_text_color }};
    --thankYouBackground: {{ settings.coupon_text_background_color }};
    --stock_warning_background_color: {{ settings.stock_warning_background_color }};
    --stock_warning_text_color: {{ settings.stock_warning_text_color }};
    --out_of_stock_text_color: {{ settings.out_of_stock_text_color }};
    --out_of_stock_background_color: {{ settings.out_of_stock_background_color }};
    --yousave-color: {{ settings.you_save_color }};
    --product-slider-width: {{ settings.product_slider_width }}%;

    {%- if settings.product_info_mobile_direction == 'left' -%}
    --product-info-alignment: flex-start;
    {%- elsif settings.product_info_mobile_direction == 'center' -%}
    --product-info-alignment: center;
    {%- endif -%}

    --tooltip-size: {{ settings.tooltip_size | default: 70 }}px;
    --iconCheckmarkChecked: #fff;
    --colorTitleSearchSuggestion: {{ settings.color_title_search_suggestion }};
    --colorTextSearchSuggestion: {{ settings.color_text_search_suggestion }};
  }
</style>

