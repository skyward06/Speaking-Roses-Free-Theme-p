    --headerFont: {{ settings.general_font.family }};
    --copyBodyFont: {{ settings.copy_body_font.family }};
    --h1Size: {{ settings.typography_h1_font_size }}px;
    --h1SizeTablet: {{ settings.typography_h1_font_size_tablet }}px;
    --h1SizeMobile: {{ settings.typography_h1_font_size_mobile }}px;
