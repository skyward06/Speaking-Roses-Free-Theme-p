    --h6Size: {{ settings.typography_h6_font_size }}px;
    --h6SizeTablet: {{ settings.typography_h6_font_size_tablet }}px;
    --h6SizeMobile: {{ settings.typography_h6_font_size_mobile }}px;
    --h6Color: {{ settings.color_h6 }};
    --copy_body: {{ settings.vasta_copy_body }}px;
    --copy_body_tablet: {{ settings.vasta_copy_body_tablet }}px;
    --copy_body_mobile: {{ settings.vasta_copy_body_mobile }}px;
    --titleReview: {{ settings.vasta_copy_body }};
    --titleReviewTablet: {{ settings.vasta_copy_body }};
    --titleReviewMobile: {{ settings.vasta_copy_body }};
