{%- assign general_font_url = settings.general_font | font_url -%}
{%- assign copy_body_font_url = settings.copy_body_font | font_url -%}
{%- assign copy_bold_body_font_url = settings.copy_bold_body_font | font_url -%}

{%- if general_font_url != blank -%}
  <link rel="preload" href="{{ general_font_url }}" as="font" crossorigin>
{%- endif -%}

{%- if copy_body_font_url != blank -%}
  <link rel="preload" href="{{ copy_body_font_url }}" as="font" crossorigin>
{%- endif -%}

{%- if copy_bold_body_font_url != blank -%}
  <link rel="preload" href="{{ copy_bold_body_font_url }}" as="font" crossorigin>
{%- endif -%}

