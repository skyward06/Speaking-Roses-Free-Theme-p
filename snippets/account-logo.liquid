{% unless settings.disable_login_logo %}
  <div class="customer-form__logo-wrapper">
    <a href="/" class="customer-form__logo-link">
      {%- if settings.enable_login_logo_svg and settings.login_logo_svg != blank -%}
        {{ settings.login_logo_svg }}
      {%- else -%}
        {%- if settings.login_logo_url != blank -%}
          {%-
            render 'responsive-image' with
            id: id,
            image: settings.login_logo_url,
            width: 400,
            no_wrap: true,
            alt: title
          -%}
        {%- endif -%}
      {%- endif -%}
    </a>
  </div>

  <style>
    .customer-form__logo-wrapper {
      display: flex;
      margin: 0 auto;
      {% if settings.login_logo_custom_dimensions == "width" %}
        height: auto;
        width: {{ settings.login_logo_max_width_desktop }}px;
      {% else %}
        height: {{ settings.login_logo_max_height_desktop }}px;
        width: auto;
      {% endif %}
    }

    .customer-form__logo-wrapper img, 
    .customer-form__logo-wrapper svg {
      width: 100%;
      height: 100%;
    }

    @media (max-width: 1019px) {
      .customer-form__logo-wrapper {
        {% if settings.login_logo_custom_dimensions == "width" %}
          width: {{ settings.login_logo_max_widtht_tablet }}px;
        {% else %}
          height: {{ settings.login_logo_max_height_tablet }}px;
        {% endif %}
      }
    }

    @media (max-width: 767px) {
      .customer-form__logo-wrapper {
        {% if settings.login_logo_custom_dimensions == "width" %}
          width: {{ settings.login_logo_max_widtht_mobile }}px;
        {% else %}
          height: {{ settings.login_logo_max_height_mobile }}px;
        {% endif %}
      }
    }
  </style>
{% endunless %}
