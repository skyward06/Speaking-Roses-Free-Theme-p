<style scoped>
  {% if section.settings.enable_pc_background_opacity %}
    {% assign rgba_color = section.settings.popular_collection_background | color_modify: 'alpha', 0.85 %}
  {% else %}
    {% assign rgba_color = section.settings.popular_collection_background %}
  {% endif %}

  :root{
    --social-icons-color:{{ section.settings.social_color }};
    --background-footer-color:{{ section.settings.background_color }};
    --border-footer-color:{{ section.settings.border_color }};
    --font-color:{{ section.settings.font_color }};
    --footer-title-font-color:{{ section.settings.title_font_color }};
    --popular-collection-background: {{ rgba_color | color_to_rgb }};
    --popular-collection-text: {{ section.settings.popular_collection_text }};
    --font-size-title-footer: {{ section.settings.font_size_title_footer }}px;
    --font-size-itens-footer: {{ section.settings.font_size_itens_footer }}px;
    --font-size-pop-itens-footer: {{ section.settings.font_size_pop_itens_footer }}px;
    --font-size-pop-itens-footer-mobile: {{ section.settings.font_size_pop_itens_footer_mobile }}px;
  }

  {%- if section.settings.border_color == 'rgba(0,0,0,0)' -%}
    .site-footer .credits .wrapper {
      padding: 0 20px;
    }
  {% endif %}

  /* Logo */

  .footer_logo {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      margin-bottom: 33px;
  }
  .footer_logo.mobile {
      margin: 0 auto 30px;
  }
  .footer_logo img,
  .footer_logo svg {
      margin: 0 auto;
      {% if custom_dimensions == "width" %}
      width: 100%;
      height: auto;
      max-width: {{ logo_max_width }}px;
      {% else %}
      width: auto;
      height: {{ logo_max_height }}px;
      {% endif %}
  }
  .site-footer .wrapper .footer__logo-anchor {
      text-decoration: none;
      cursor: pointer;
      color: var(--color-link);
      font-size: var(--copy_body);
      line-height: 1.3;
      text-transform: uppercase;
  }

  /* Newsletter*/

  .site-footer .wrapper .grid__item .newsletter-klaviyo form .klaviyo_field_group,
  .site-footer .wrapper .grid__item .newsletter-klaviyo form .klaviyo_form_actions {
    {%- for block in section.blocks -%}
      {%- if block.type == 'newsletter' -%}
        border: 1px solid {{ block.settings.newsletter_hack_border_color }};
      {%- endif -%}
    {%- endfor -%}
    height: 100%;
  }
  .site-footer .wrapper .grid__item .newsletter-klaviyo form .klaviyo_field_group {
      width: 66%;
      margin: 0;
  }
  .site-footer .wrapper .grid__item .newsletter-klaviyo form .klaviyo_field_group input {
      width:100%;
      border-radius: 0;
      background: #010101;
      padding: 0 17px 4px;
      letter-spacing: 1px;
  }
  .site-footer .wrapper .grid__item .newsletter-klaviyo form .klaviyo_form_actions,
  .site-footer .wrapper .grid__item .newsletter-klaviyo form .klaviyo_field_actions button {
      width: 33%;
      display: flex;
      align-items: center;

      border-radius: 4px;
    overflow: hidden;
  }
  .newsletter-klaviyo .email-signup-form .klaviyo_submit_button {
      border-radius: 3px;
      height: 38.7px;
  }

