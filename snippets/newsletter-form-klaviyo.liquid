      background-color: var(--newsletter-submit-hover);
      color: var(--newsletter-submit-text-color-hover);
  }
  .recover-password-form{
      display: none;
    }
  .form-success{
      color: #56ad6a;
      border: 1px solid #56ad6a;
      border-radius: 3px;
      background-color: #ecfef0;
      padding: 0 15px;
      max-width: 300px;
      margin-bottom: 20px;
    }
  .newsletter-form.full .contact-form {
