  }
  .newsletter-form.full .contact-form .buttonControlNewsletterForm .buttonNewsletterForm {
      width: 100%;
      background-color: var(--newsletter-submit-color);
      color: var(--newsletter-submit-text-color);
      text-transform: uppercase;
      height: 44px;
      font-weight: bold;
      cursor: pointer;
      border: none;
