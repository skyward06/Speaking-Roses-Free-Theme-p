<!-- start blog-posts.liquid (SECTION) -->
<section
  id="blog-posts"
  {% if section.settings.custom_class != blank %}
    class="{{ section.settings.custom_class }}"
  {% endif %}
>
  {%- assign sectionTitle = section.settings.title -%}
  {%- if sectionTitle == blank -%}
    {%- assign sectionTitle = blogs[section.settings.homepage_blog].title -%}
  {%- endif -%}

  <h2 class="section-title">{{ sectionTitle }}</h2>
  <div class="wrapper content-wrapper">
    {% if section.settings.homepage_blog != blank %}
      {%- for article in blogs[section.settings.homepage_blog].articles limit: section.settings.posts_amount -%}
        {%- assign col = 'half' -%}
        {%- if section.settings.posts_amount == '3' -%}
          {%- assign col = 'third' -%}
        {%- endif -%}
        {%- assign id_blog_posts = forloop.index | prepend: 'blog-posts-' -%}

        <article class="post {{ col }}">
          {%- if section.settings.display_post_image -%}
            {%- if article.image != blank -%}
              <a
                href="{{ article.url | default: '#' }}"
                class="img-post-home"
                title="{{- article.image.alt | default: 'Article Image' -}}"
              >
                {%-
                  render 'responsive-image' with
                  image: article.image,
                  lazyload: true,
                  width: 110,
                  height: 110,
                  alt: section.settings.homepage_banner_text,
                  no_wrap: true,
                -%}
              </a>
            {%- else -%}
              <a
                href="{{ article.url | default: '#' }}"
                class="img-post-home"
                title="{{- article.image.alt | default: 'Article Image' -}}"
              >
                {%- if section.settings.blog_rewrite_image_home == 'placeholder' -%}
                  {%-
                    render 'responsive-image' with
                    image: section.settings.blog_article_placeholder_home,
                    lazyload: true,
                    width: 110,
                    height: 110,
                    alt: section.settings.blog_article_placeholder_home.alt,
                    no_wrap: true,
                  -%}
                {%- endif -%}
              </a>
            {%- endif -%}
          {%- endif -%}

          <div class="post-content-home">
            <h3 class="blog_post_title">{{ article.title }}</h3>

            <div class="date">{{ article.published_at | date: '%B %d, %Y' }}</div>

            <div class="blog_post_content">
              {%- if article.excerpt.size > 0 -%}
                {{ article.excerpt }}
              {%- else -%}
                {{ article.content | strip_html | truncatewords: 20 }}
              {%- endif -%}
            </div>

            <a
              title="Read More"
              id="BlogPostsLink-{{ section.id }}{{ forloop.index }}"
              class="blog_post_link"
              href="{{ article.url | default: '#' }}"
              >Read More â†’
            </a>
          </div>
        </article>
      {% endfor %}
    {%- else -%}
      {% assign postToDisplay = section.settings.posts_amount | plus: 0 %}

      {%- for i in (1..postToDisplay) -%}
        {%- assign col = 'half' -%}

        {%- if section.settings.posts_amount == '3' -%}
          {%- assign col = 'third' -%}
        {%- endif -%}

        {%- assign id_blog_posts = forloop.index | prepend: 'blog-posts-' -%}
        
        <article class="post {{ col }}">
          <div class="img-post-home">
            {%-
              render 'responsive-image' with
              placeholder: 'product-6',
              width: 110,
              height: 110
            -%}
          </div>

          <div class="post-content-home">
            <h3 class="blog_post_title">Title</h3>

            <div class="blog_post_content"><p>content</p></div>
          </div>
        </article>
      {% endfor %}
    {%- endif -%}
  </div>
</section>

