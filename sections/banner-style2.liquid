<!-- start banner-style2.liquid (SECTION) -->
{%- assign imageDesktop = section.settings.homepage_banner_style_2 -%}
{%- assign paddingTopDesktop = imageDesktop.height | plus: 0.0 | divided_by: imageDesktop.width | times: 100.0 -%}
{%- assign imageMobile = section.settings.mobile_banner_style_2 -%}
{%- assign paddingTopMobile = imageMobile.height | plus: 0.0 | divided_by: imageMobile.width | times: 100.0 -%}

<section class="shopify-section banner homepage-style-2 {{ section.settings.custom_class }}">
  {%- assign enable_lazy = section.settings.enable_lazy_load -%}
  <div class="wrapper wrapper-banner">
    <div class="banner">
      <div class="banner-image-wrapper">
        <div class="banner-img banner-padding-top-desktop banner-padding-top-mobile">
          {%- if section.settings.homepage_title != blank -%}
            <h2 class="mobile banner-2-title">{{ section.settings.homepage_title }}</h2>
          {% else %}
            <h2 class="banner-2-title hide">Banner-Desktop-{{ section.id }}</h2>
          {%- endif -%}
          {%- if section.settings.homepage_banner_style_2.alt != blank -%}
            {%- assign image01_alt = section.settings.homepage_banner_style_2.alt | strip_html | escape -%}
          {%- endif -%}
          
          {% if section.settings.homepage_banner_style_2 != blank %}
            <picture>
              <source
                media="(min-width: {%- if section.settings.mobile_banner_style_2 != blank -%}768px{%- else -%}0px{%- endif -%})"
                sizes="100vw"
                srcset="
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 800 }} 800w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 800 }} 800w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 900 }} 900w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 1000 }} 1000w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 1100 }} 1100w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 1200 }} 1200w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 1300 }} 1300w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 1400 }} 1400w,
                  {{ section.settings.homepage_banner_style_2 | image_url: width: 1500 }} 1500w
                "
              >
              {%- if section.settings.mobile_banner_style_2 != blank -%}
                <source
                  media="(max-width: 767px)"
                  sizes="100vw"
                  srcset="
                    {{ section.settings.mobile_banner_style_2 | image_url: width: 450 }} 450w,
                    {{ section.settings.mobile_banner_style_2 | image_url: width: 550 }} 550w,
                    {{ section.settings.mobile_banner_style_2 | image_url: width: 650 }} 650w,
                    {{ section.settings.mobile_banner_style_2 | image_url: width: 750 }} 750w
                  "
                >
              {%- endif -%}

              <img
                width="{{ imageDesktop.width }}"
                height="{{ imageDesktop.height }}"
                {% if enable_lazy %}
                  loading="lazy"
                  data-class="LazyLoad"
                  data-src="{{ section.settings.homepage_banner_style_2 | image_url: width: 1440 }}"
                  src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
                  alt="{{ image_alt }}"
                {%- else -%}
                  src="{{ section.settings.homepage_banner_style_2 | image_url: width: 1440 }}" alt="{{ image_alt }}"
                {% endif %}
              >
            </picture>
          {% else %}
            {%-
              render 'responsive-image' with
              placeholder: 'collection-2'
            -%}
          {% endif %}
        </div>
        <p class="no-mobile banner-2-subtitle">{{ section.settings.homepage_text_under_banner }}</p>
      </div>
      <div class="banner-content">
        {% if section.settings.homepage_title != blank %}
          <h2 class="no-mobile banner-2-title">{{ section.settings.homepage_title }}</h2>
        {% else %}
          <h2 class="banner-2-title hide">Banner-Mobile-{{ section.id }}</h2>
        {% endif %}

        {%- if section.settings.homepage_banner_product_2.alt != blank -%}
          {%- assign image02_alt = section.settings.homepage_banner_product_2.alt | strip_html | escape -%}
         {%- elsif section.settings.homepage_title != blank -%}
          {%- assign image02_alt = section.settings.homepage_title | strip_html | escape -%}
         {%- else -%}
          {%- assign image02_alt = 'Image without description.' -%}
        {%- endif -%}

        {%- if section.settings.homepage_banner_product_2 != blank -%}
          {% if enable_lazy == true %}
            <img
              width="{{ imageDesktop.width }}"
              height="{{ imageDesktop.height }}"
              data-class="LazyLoad"
              class="no-mobile banner-2-image"
              data-src="{{ section.settings.homepage_banner_product_2 | image_url: width: 852 }}"
              alt="{{ image02_alt }}"
              src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
            >
          {% else %}
            <img
              width="{{ imageDesktop.width }}"
              height="{{ imageDesktop.height }}"
              class="no-mobile banner-2-image"
              src="{{ section.settings.homepage_banner_product_2 | image_url: width: 852 }}"
              alt="{{ image02_alt }}"
            >
          {% endif %}
        {% else %}
          {%-
            render 'responsive-image' with
            placeholder: 'collection-6',
            class: 'no-mobile banner-2-image'
          -%}
        {% endif %}

        {%- if section.settings.homepage_text_button != blank -%}
          <a
            title="{{ section.settings.homepage_title_button | strip_html | escape }}"
            id="banner2-btn"
            href="{{ section.settings.homepage_link_button | default: '#' }}"
            class="button"
          >
            {{ section.settings.homepage_text_button }}
          </a>
        {%- endif -%}
        <p class="no-mobile banner-2-subtitle">
          <span class="content-2-subtitle">{{ section.settings.homepage_text_under_button }}</span>
        </p>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</section>
<style scoped>
  #shopify-section-{{ section.id }} {
    {% if section.settings.enable_custom_margins_paddings %}
      margin-top: {{ section.settings.custom-margin-top }}px;
      margin-bottom: {{ section.settings.custom-margin-bottom }}px;
      padding-top: {{ section.settings.custom-padding-top }}px;
      padding-bottom: {{ section.settings.custom-padding-bottom }}px;
    {% else %}
      margin: 20px 0;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .homepage-style-2.banner .wrapper .banner .banner-content .banner-2-title{
    color:{{ section.settings.primary_title_color }};
    font-style: {{ section.settings.vasta_banner_font_style }};
    text-align: {{ section.settings.vasta_banner_font_align }};
  }
  #shopify-section-{{ section.id }} .homepage-style-2.banner .wrapper .banner .banner-content .banner-2-subtitle .content-2-subtitle{
    color:{{ section.settings.secondary_below_color }};
    font-style: {{ section.settings.vasta_banner_font_style }};
  }
  #shopify-section-{{ section.id }} .homepage-style-2.banner .banner-2-subtitle{
    color:{{ section.settings.primary_below_color }};
    font-style: {{ section.settings.vasta_banner_font_style }};
  }
  #shopify-section-{{ section.id }} .homepage-style-2.banner .button{
    background-color: {{ section.settings.banner_2_button_background_color }};
    color:{{ section.settings.banner_2_button_text_color }};
    font-style: {{ section.settings.vasta_banner_font_style }};
  }
  #shopify-section-{{ section.id }} .homepage-style-2.banner .button:hover,
  #shopify-section-{{ section.id }} .homepage-style-2.banner .button:active{
    background-color: {{ section.settings.banner_2_button_hover_background_color }};
    color: {{ section.settings.banner_2_button_hover_text_color }};
    font-style: {{ section.settings.vasta_banner_font_style }};
  }
  #shopify-section-{{ section.id }} .homepage-style-2 .banner-img.banner-padding-top-desktop {
    padding-top: {{ paddingTopDesktop }}%;
    margin-bottom: 5px;
  }
  img.no-mobile.banner-2-image {
    max-width: 100%;
  }
  .homepage-style-2.banner .button,
  .homepage-style-2.banner .wrapper,
  .homepage-style-2.banner .banner-content .banner-2-title {
    width: 100%;
  }
  .homepage-style-2.banner .button,
  .homepage-style-2.banner .banner-content .banner-2-title {
    font-weight: bold;
  }
  .homepage-style-2.banner .button,
  .homepage-style-2.banner .banner-img,
  .homepage-style-2.banner .banner-img .banner-2-subtitle {
    text-align: center;
  }
  .homepage-style-2.banner .button {
    margin: 0 0 8px;
    display: inline-block;
    border-radius: 2px;
    padding: 5px 15px;
    border: 4px solid;
    border-top-color: #dadada;
    border-bottom-color: #3e3e3e;
    border-right-color: #3e3e3e;
    border-left-color: #dadada;
    transition: all 0.35s ease 0s;
  }
  .homepage-style-2.banner .wrapper {
    padding: 15px;
    background: #fcfcfc;
    box-shadow: 0 0px 20px rgba(0, 0, 0, 0.1);
    vertical-align: top;
    display: flex;
    align-items: center;
  }
  .homepage-style-2.banner .wrapper .banner {
    margin-top: 20px;
    margin-bottom: 0;
  }
  .homepage-style-2.banner .wrapper .banner .banner-image-wrapper {
    width: 60%;
    padding: 10px;
    border: 1px solid #e2e2e2;
  }
  .homepage-style-2.banner .wrapper .banner .banner-img {
    width: 100%;
    background: none;
    line-height: 1.6;
    position: relative;
  }
  .homepage-style-2.banner .wrapper .banner .banner-img .banner-2-subtitle {
    margin: 0 0 5px;
    text-transform: none;
  }
  .homepage-style-2.banner .wrapper .banner .banner-img img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 100%;
    width: 100%;
    object-fit: cover;
    height: 100%;
  }
  .homepage-style-2.banner .wrapper .banner .banner-content {
    float: left;
    padding-left: 30px;
    width: 40%;
    line-height: 1.6;
  }
  .homepage-style-2.banner .wrapper .banner .banner-content .banner-2-title {
    text-align: right;
    vertical-align: top;
    margin: 0 0 20px;
    text-transform: none;
    line-height: 1.4;
  }
  .homepage-style-2.banner .wrapper .banner .banner-content .banner-2-subtitle {
    text-align: center;
    font-style: normal;
    margin: 0 0 5px;
    text-transform: none;
  }
  .homepage-style-2.banner .wrapper .banner .banner-content .banner-2-subtitle .content-2-subtitle {
    display: inline-block;
  }
  .homepage-style-2.banner .wrapper-banner {
    padding: 15px;
    background: #fcfcfc;
    box-shadow: 0 0px 20px rgba(0, 0, 0, 0.1);
    width: 100%;
    vertical-align: top;
    display: flex;
    align-items: center;
    flex-direction: row;
  }
  .homepage-style-2.banner .wrapper-banner .banner {
    padding: 15px;
    background: #fcfcfc;
    width: 100%;
    vertical-align: top;
    align-items: flex-start;
    display: flex;
    flex-wrap: wrap;
  }
  .banner {
    float: left;
    width: 100%;
    position: relative;
    overflow: hidden;
  }
  .banner .banner-img {
    margin: 0 auto;
  }
  .banner .banner-img img {
    width: 100%;
  }
  @media (max-width: 1279px) {
    .homepage-style-2 .banner .button {
      padding: 5px 0px;
    }
  }
  @media (max-width: 767px) {
    {% if section.settings.mobile_banner_style_2 != blank %}
      #shopify-section-{{ section.id }} .homepage-style-2 .banner-img.banner-padding-top-mobile {
        padding-top: {{ paddingTopMobile }}%;
      }
    {% endif %}
    .homepage-style-2.banner .wrapper {
      padding: 0;
    }
    .homepage-style-2.banner .wrapper .banner {
      padding: 0;
      margin: 0;
    }
    .homepage-style-2.banner .wrapper .banner .button {
      width: 90%;
      display: block;
      margin: 0 auto;
      float: none;
    }
    .homepage-style-2.banner .wrapper .banner .banner-image-wrapper {
      width: 100%;
      padding: 0;
      border: none;
      margin-bottom: 0;
    }
    .homepage-style-2.banner .wrapper .banner .banner-img .banner-2-title {
      text-transform: uppercase;
      margin-bottom: 8px;
    }
    .homepage-style-2.banner .wrapper .banner .banner-content {
      width: 100%;
      padding: 0;
    }
  }
</style>

