<!-- start new-banner-layout.liquid (SECTION) -->
{%- assign enable_lazy = section.settings.enable_lazy_load | default: false -%}
{%- assign title_desktop = section.settings.main_banner_headline_size -%}
{%- assign title_tablet = section.settings.main_banner_headline_size_tablet -%}
{%- assign title_mobile = section.settings.main_banner_headline_size_mobile -%}
{%- assign subtitle_desktop = section.settings.main_banner_sub_headline_size -%}
{%- assign subtitle_tablet = section.settings.main_banner_sub_headline_size_tablet -%}
{%- assign subtitle_mobile = section.settings.main_banner_sub_headline_size_mobile -%}
{%- assign upper_headline_desktop = section.settings.main_banner_upper_headline_size -%}
{%- assign upper_headline_tablet = section.settings.main_banner_upper_headline_size_tablet -%}

{% capture block_reviews %}
  {% for block in section.blocks %}
    {% if block.settings.review_content != blank and block.type == 'reviews' %}
      <div class="new-banner__block-reviews custom-review-{{ forloop.index }}-{{ section.id }} {% if block.settings.block_review_mobile == false %}no-mobile{% endif %}">
        <div class="new-banner__block-reviews__head">
          {% if block.settings.review_image != blank %}
            <div class="new-banner__block-reviews__author-img">
              {%- render 'responsive-image' with
                image: block.settings.review_image,
                lazyload: enable_lazy,
                width: 200,
                no_wrap: true, 
                alt: block.settings.review_image.alt
              -%}
            </div>
          {% endif %}
          <div class="new-banner__block-reviews__infos">
            <p class="new-banner__block-reviews__name">{{ block.settings.review_name }}</p>
            <div class="new-banner__block-reviews__stars">
              {%- for i in (1..block.settings.review_stars) -%}
                <svg width="12" height="11" viewBox="0 0 12 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6 0L7.34708 4.1459H11.7063L8.17963 6.7082L9.52671 10.8541L6 8.2918L2.47329 10.8541L3.82037 6.7082L0.293661 4.1459H4.65292L6 0Z" fill="{{ section.settings.color_review_stars }}"/>
                </svg>
              {%- endfor -%}
            </div>
          </div>
        </div>
        <div class="new-banner__block-reviews__content">
          {{ block.settings.review_content }}
        </div>
      </div>
    {% endif %}
  {% endfor %}
{% endcapture %}

{% capture new-banner_content %}
  <section id="new-banner-layout" class="shopify-section new-banner new-banner__homepage-style-1 {{ section.settings.custom_class }}">
    {%- assign imageDesktop = section.settings.homepage_banner_style_1 -%}
    {%- assign paddingTopDesktop = imageDesktop.height | plus: 0.0 | divided_by: imageDesktop.width | times: 100.0 -%}
    {%- assign imageTablet = section.settings.tablet_banner_style_1 -%}
    {%- assign paddingTopTablet = imageTablet.height | plus: 0.0 | divided_by: imageTablet.width | times: 100.0 -%}
    {%- assign imageMobile = section.settings.mobile_banner_style_1 -%}
    {%- assign paddingTopMobile = imageMobile.height | plus: 0.0 | divided_by: imageMobile.width | times: 100.0 -%}

    {%- if section.settings.homepage_banner_style_1 == blank -%}
      {%- assign paddingTopDesktop = 40 -%} 
    {%- endif -%}

    {%- if imageTablet == blank -%}
      {%- assign paddingTopTablet = 50 -%}
    {%- endif -%}

    {%- if section.settings.mobile_banner_style_1 == blank -%}
      {%- assign paddingTopMobile = 55 -%}
    {%- endif -%}

    {%- assign image_desktop_width = 1800 -%}
    {%- assign image_desktop_height = 1000 -%}
    {%- if imageDesktop == blank -%}
      {%- assign image_desktop_height = image_desktop_width -%}
    {%- endif -%}

    <div class="new-banner__banner-img {% if section.settings.enable_custom_banner_height == false %}new-banner__banner-padding-top-desktop{% endif %}{% if section.settings.enable_custom_banner_height == false %} new-banner__banner-padding-top-tablet{% endif %}{% if section.settings.enable_custom_banner_height == false %} new-banner__banner-padding-top-mobile{% endif %}">
      {%- if section.settings.homepage_banner_style_1.alt != blank -%}
        {%- assign image_alt = section.settings.homepage_banner_style_1.alt | strip_html | escape -%}
      {%- elsif section.settings.main_banner_title != blank -%}
        {%- assign image_alt = section.settings.main_banner_title | strip_html | escape -%}
      {%- else -%}
        {%- assign image_alt = "Image without description." -%}
      {%- endif -%}

      <picture>
        {%- assign desktop_widths = '1500,1400,1300,1200,1100,1000,900,800' | split: ',' -%}
        {%- assign tablet_widths = '1200,1100,1000,900,800,700' | split: ',' -%}
        {%- assign mobile_widths = '700,600,500,400' | split: ',' -%}
        {%- assign default_image = section.settings.homepage_banner_style_1 -%}

        {% if default_image != blank %}
          <source class="new-banner__banner-image-desktop" media="(min-width: 1020px)" {% if enable_lazy %}data-{% endif %}srcset="
            {%- for desktop_width in desktop_widths -%} https:{{ default_image | image_url: width: desktop_width }} {{ desktop_width }}w, {%- endfor -%}" data-class="LazyLoad"
          />
        {% else %}
          <source class="new-banner__banner-image-desktop" media="(min-width: 1020px)" {% if enable_lazy %}data-{% endif %}srcset="
            {%- for desktop_width in desktop_widths -%} https:{{ 'default-banner-placeholder.png' | asset_img_url: '1440x506' }} {{ desktop_width }}w, {%- endfor -%}" data-class="LazyLoad"
          />
        {% endif %}

        {%- if imageTablet != blank -%}
          {%- assign default_image = imageTablet -%}
          <source class="new-banner__banner-image-tablet" media="(min-width: 768px)" {% if enable_lazy %}data-{% endif %}srcset="
            {%- for tablet_width in tablet_widths -%} https:{{ default_image | image_url: width: tablet_width }} {{ tablet_width }}w, {%- endfor -%}" data-class="LazyLoad"
          />
        {%- else -%}
          <source class="new-banner__banner-image-tablet" media="(min-width: 768px)" {% if enable_lazy %}data-{% endif %}srcset="
            {%- for tablet_width in tablet_widths -%} https:{{ 'default-banner-placeholder-tablet.png' | asset_img_url: '768x280' }} {{ tablet_width }}w, {%- endfor -%}" data-class="LazyLoad"
          />
        {%- endif -%}

        {%- if imageMobile != blank -%}
          {%- assign default_image = imageMobile -%}
          <source class="new-banner__banner-image-mobile" media="(max-width: 767px)" {% if enable_lazy %}data-{% endif %}srcset="
            {%- for mobile_width in mobile_widths -%} https:{{ default_image | image_url: width: mobile_width }} {{ mobile_width }}w, {%- endfor -%}" data-class="LazyLoad"
          />
        {%- else -%}
          <source class="new-banner__banner-image-mobile" media="(max-width: 767px)" {% if enable_lazy %}data-{% endif %}srcset="
            {%- for mobile_width in mobile_widths -%} https:{{ 'default-banner-placeholder-mobile.png' | asset_img_url: '375x269' }} {{ mobile_width }}w, {%- endfor -%}" data-class="LazyLoad"
          />
        {%- endif -%}
        
        <img class="new-banner__banner-image" width="{{ image_desktop_width }}" height="{{ image_desktop_height }}"  src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" alt="Banner" loading="lazy"/>
      </picture>

      {%- if section.settings.main_banner_title != "" -%}
        <div class="new-banner__banner-titles {% unless section.settings.enable_floating_headline %} new-banner__banner-titles--desktop{% endunless %} {% unless section.settings.enable_floating_headline_tablet %} new-banner__banner-titles--tablet{% endunless %} {% unless section.settings.enable_floating_headline_mobile %} new-banner__banner-titles--mobile{% endunless %}">
          {% if section.settings.enable_upper_banner_title %}
            <div class="new-banner__upper-headline">
              <p>{{ section.settings.upper_banner_title }}</p>
              <svg width="66" height="12" viewBox="0 0 66 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M5.4579 0.549805L7.03297 4.28668L10.9003 4.72203L8.00476 7.45088L8.80576 11.4501L5.44131 9.39964L2.06902 11.4362L2.88516 7.44L0 4.6993L3.86877 4.28006L5.4579 0.549805Z" fill="#DAD4D4"/>
                <path fill-rule="evenodd" clip-rule="evenodd" d="M19.0834 0.549805L20.6585 4.28668L24.5258 4.72203L21.6302 7.45088L22.4313 11.4501L19.0668 9.39964L15.6945 11.4362L16.5107 7.44L13.6255 4.6993L17.4943 4.28006L19.0834 0.549805Z" fill="#DAD4D4"/>
                <path fill-rule="evenodd" clip-rule="evenodd" d="M32.7089 0.549805L34.2839 4.28668L38.1513 4.72203L35.2557 7.45088L36.0567 11.4501L32.6923 9.39964L29.32 11.4362L30.1361 7.44L27.251 4.6993L31.1197 4.28006L32.7089 0.549805Z" fill="#DAD4D4"/>
                <path fill-rule="evenodd" clip-rule="evenodd" d="M46.3344 0.549805L47.9094 4.28668L51.7768 4.72203L48.8812 7.45088L49.6822 11.4501L46.3178 9.39964L42.9455 11.4362L43.7616 7.44L40.8765 4.6993L44.7452 4.28006L46.3344 0.549805Z" fill="#DAD4D4"/>
                <path fill-rule="evenodd" clip-rule="evenodd" d="M59.9594 0.549805L61.5344 4.28668L65.4018 4.72203L62.5062 7.45088L63.3072 11.4501L59.9428 9.39964L56.5705 11.4362L57.3866 7.44L54.5015 4.6993L58.3702 4.28006L59.9594 0.549805Z" fill="#DAD4D4"/>
              </svg>
            </div>
          {% endif %}
        
          {%- if section.settings.enable_h1 -%}
            <h1 class="new-banner__banner-title">{{ section.settings.main_banner_title }}</h1>
          {%- else -%}
            <h2 class="new-banner__banner-title">{{ section.settings.main_banner_title }}</h2>
          {%- endif -%}

          <div class="new-banner__banner-sub-title">{{ section.settings.main_banner_sub_title }}</div>
          
          {%- if section.settings.enable_button_headline -%}
            <a style="position: static;transform: unset;" class="new-banner__banner-titles-new-button" title="{{ section.settings.label_button_headline | strip_html | escape }}"  href="{{ section.settings.link_button_headline | default: '#' }}">
              {{ section.settings.label_button_headline }}
            </a>
          {%- endif -%}
        </div>
      {%- else -%}
        <h2 class="hide" style="top:{{ section.settings.vasta_title_vertical_position }}%; left:{{ section.settings.vasta_title_horizontal_position }}%">{{ shop.name }}</h2>
        <div class="new-banner__banner-titles">
          <div class="new-banner__banner-sub-title" >{{ section.settings.main_banner_sub_title }}</div>
        </div>
      {%- endif -%}        

      {%- assign count = 0 -%}
      <div class="new-banner__slider-buttons" id="CallToAction-{{ section.id }}">
        {%- for block in section.blocks -%}
          {%- if "select" == block.type -%}
            <style>
              .new-banner__banner__button--{{ forloop.index }}-{{ section.id }} {
                {{ block.settings.custom_html }}
              }
            </style>

            {%- assign count = count | plus: 1 -%}
            {% if block.settings.enable_helper_text %}<div class="new-banner__helper-text__content new-banner__helper-text__content-{{ forloop.index }}-{{ section.id }}">{% endif %}
              {% if block.settings.enable_button_link %}
                <a {% if block.settings.enable_helper_text == false %}id="new-banner__Banner1Btn-{{ forloop.index }}-{{ section.id }}"{% else %} style="position: static;transform: unset;"{% endif %}
                  class="new-banner__banner__button--{{ forloop.index }}-{{ section.id }}
                  {% if block.settings.show_mobile_buttons == false %} no-mobile {% endif %} 
                  btn btn-v {{ block.settings.vasta_buttons_hover_effect }} btn-v--{{ block.id }}" 
                  title="{{ block.settings.linktext | strip_html | escape }}" 
                  href="{{ block.settings.link | default: '#' }}"
                >
                  {{ block.settings.linktext }}
                </a>
              {% else %}
                <span {% if block.settings.enable_helper_text == false %}id="new-banner__Banner1Btn-{{ forloop.index }}-{{ section.id }}"{% else %} style="position: static;transform: unset;"{% endif %}
                  class="new-banner__banner__button--{{ forloop.index }}-{{ section.id }} new-banner__banner__button--no-link
                  {% if block.settings.show_mobile_buttons == false %} no-mobile {% endif %} 
                  btn btn-v {{ block.settings.vasta_buttons_hover_effect }} btn-v--{{ block.id }}" 
                  title="{{ block.settings.linktext | strip_html | escape }}" 
                  href="{{ block.settings.link | default: '#' }}"
                >
                  {{ block.settings.linktext }}
                </span>
              {% endif %}
              {% if block.settings.enable_helper_text %}
                <span class="new-banner__custom__help-text {% if block.settings.show_mobile_buttons == false %} no-mobile {% endif %}">
                  {{ block.settings.helper_text }}
                </span>
              {% endif %}
            {% if block.settings.enable_helper_text %}</div>{% endif %}
          {%- endif -%}
        {%- endfor -%}
      </div>
      {{ block_reviews }}
    </div>
  </section>
{% endcapture %}

{% if section.settings.full_with_banne1 %}
  {{ new-banner_content }}
{% else %}
  <div class="wrapper">
    {{ new-banner_content }}
  </div>
{% endif %}

