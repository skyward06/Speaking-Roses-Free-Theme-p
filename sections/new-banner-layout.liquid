      justify-content: flex-start;
    {% else %}
      justify-content: flex-end;
    {% endif %}
}
  #shopify-section-{{ section.id }} .btn-v,
  #shopify-section-{{ section.id }} .new-banner__custom__help-text {
    font-size:{{ section.settings.banner_font_size_button }}px;
    line-height:87.8%;
  }
  #shopify-section-{{ section.id }} .new-banner__homepage-style-1 .new-banner__banner-img.new-banner__banner-padding-top-desktop{
    padding-top: {{ paddingTopDesktop }}%;
  }
  #shopify-section-{{ section.id }} .new-banner__homepage-style-1.new-banner .new-banner__banner-titles{
    z-index: 1;
    height: auto;
  }
  #shopify-section-{{ section.id }} .new-banner__block-reviews {
    width: {{ section.settings.block_review_desktop_width }}px;
  }

