<style>
  #shopify-section-{{ section.id }} {
    {% if section.settings.enable_custom_margins_paddings %}
      margin-top: {{ section.settings.custom-margin-top }}px;
      margin-bottom: {{ section.settings.custom-margin-bottom }}px;
      padding-top: {{ section.settings.custom-padding-top }}px;
      padding-bottom: {{ section.settings.custom-padding-bottom }}px;
    {% else %}
      margin: 20px 0;
    {% endif %}
  }

  {% if section.settings.background_color != "rgba(0,0,0,0)" %}
    #shopify-section-{{ section.id }} .banner-dynamic-content {
      background-color: {{ section.settings.background_color }};
    }
  {% endif %}

  #shopify-section-{{ section.id }} .banner-dynamic-content__title {
    font-size: {{ section.settings.font_size_desktop_headline }}px;
    text-transform: {{ section.settings.headline_text_transform }};
    color: {{ section.settings.headline_text_color }};
  }

  {% if section.settings.enable_custom_banner_height %}
    #shopify-section-{{ section.id }} .banner-dynamic-content__image-wrapper {
      overflow: hidden;
      display: flex;
      height: 0;
      padding-top: {{ section.settings.banner_custom_max_height }}px;
      top: 0;
      left: 0;
      width: 100%;
      position: relative;
    }

    #shopify-section-{{ section.id }} .banner-dynamic-content__image-container {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
    }

    #shopify-section-{{ section.id }} .banner-dynamic-content__image-container img {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      max-width: 100%;
      object-fit: cover;
    }
  {% endif %}

  {% if section.settings.enable_custom_width %}
    #shopify-section-{{ section.id }} .banner-dynamic-content__image-container {
      width: {{ section.settings.custom_width_desktop }}%;
      margin: 0 auto;
    }
  
    #shopify-section-{{ section.id }} .banner-dynamic-content__image-container img {
      width: 100%;
    }
  {% endif %}

  #shopify-section-{{ section.id }} .banner-block-text__headline {
    font-size: {{ section.settings.block_text_font_size_desktop_headline }}px;
    color: {{ section.settings.block_text_headline_color }};
  }

  #shopify-section-{{ section.id }} .banner-block-text__content {
    font-size: {{ section.settings.block_text_font_size_desktop_content }}px;
    color: {{ section.settings.block_text_color }};
  }

  {% for block in section.blocks %}
    {% if block.type == 'text' %}
      #shopify-section-{{ section.id }} .block-text--{{ block.id }} {
        left: {{ block.settings.text_block_position_x }}%;
        top: {{ block.settings.text_block_position_y }}%;
        width: {{ block.settings.block_custom_text_width }}%;

        text-align: {{ block.settings.block_custom_text_align }};
      }

      #shopify-section-{{ section.id }} .block-text--{{ block.id }} .banner-block-text__headline {
        text-transform: {{ block.settings.block_custom_text_headline_text_transform }};
      }

      #shopify-section-{{ section.id }} .block-text--{{ block.id }} .banner-block-text__content {
        text-transform: {{ block.settings.block_custom_text_content_text_transform }};
      }
    {% endif %}
  {% endfor %}

  @media (max-width: 1019px) {
    {% if section.settings.enable_custom_banner_height %}
      #shopify-section-{{ section.id }} .banner-dynamic-content__image-wrapper {
        padding-top: {{ section.settings.banner_custom_max_height_tablet }}px;
      }
    {% endif %}

    {% if section.settings.enable_custom_width %}
      #shopify-section-{{ section.id }} .banner-dynamic-content__image-container {
        width: {{ section.settings.custom_width_tablet }}%;
      }
    {% endif %}

    #shopify-section-{{ section.id }} .banner-dynamic-content__title {
      font-size: {{ section.settings.font_size_tablet_headline }}px;
      margin: 0 0 30px;
    }

    #shopify-section-{{ section.id }} .banner-block-text__headline {
      font-size: {{ section.settings.block_text_font_size_tablet_headline }}px;
    }

    #shopify-section-{{ section.id }} .banner-block-text__content {
      font-size: {{ section.settings.block_text_font_size_tablet_content }}px;
    }

    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        #shopify-section-{{ section.id }} .block-text--{{ block.id }} {
          left: {{ block.settings.text_block_position_x_tablet }}%;
          top: {{ block.settings.text_block_position_y_tablet }}%;
          width: {{ block.settings.block_custom_text_width_tablet }}%;
          text-align: {{ block.settings.block_custom_text_align_tablet }};
        }
      {% endif %}
    {% endfor %}
  }

  @media (max-width: 767px) {
    {% if section.settings.enable_custom_banner_height %}
      #shopify-section-{{ section.id }} .banner-dynamic-content__image-wrapper {
        padding-top: {{ section.settings.banner_custom_max_height_mobile }}%;
      }
    {% endif %}

    {% if section.settings.enable_custom_width %}
      #shopify-section-{{ section.id }} .banner-dynamic-content__image-container {
        width: {{ section.settings.custom_width_mobile }}%;
      }
    {% endif %}

    #shopify-section-{{ section.id }} .banner-dynamic-content__title {
      font-size: {{ section.settings.font_size_mobile_headline }}px;
      text-transform: {{ section.settings.headline_text_transform }};
      color: {{ section.settings.headline_text_color }};
      margin: 0 0 16px 0;
      letter-spacing: 0px;
    }

    #shopify-section-{{ section.id }} .banner-block-text__content {
      font-size: {{ section.settings.block_text_font_size_mobile_content }}px;
    }

    #shopify-section-{{ section.id }} .banner-block-text__headline {
      font-size: {{ section.settings.block_text_font_size_mobile_headline }}px;
    }

    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        #shopify-section-{{ section.id }} .block-text--{{ block.id }} {
          width: {{ block.settings.block_custom_text_width_mobile }}%;
          text-align: {{ block.settings.block_custom_text_align_mobile }};
        }
      {% endif %}
    {% endfor %}
  }
</style>
