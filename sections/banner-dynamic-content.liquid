<section class="shopify-section banner-dynamic-content__wrapper {{ section.settings.custom_class }}">
  {%- if section.settings.headline_text != blank -%}
    <h2 class="banner-dynamic-content__title section-title">{{- section.settings.headline_text -}}</h2>
  {%- endif -%}

  <div class="banner-dynamic-content wrapper">
    {%- assign imageDesktop = section.settings.banner-image-desktop -%}
    {%- assign paddingTopDesktop = imageDesktop.height | plus: 0.0 | divided_by: imageDesktop.width | times: 100.0 -%}

    {%- assign imageTablet = section.settings.banner-image-tablet %}
    {%- assign paddingTopTablet = imageTablet.height | plus: 0.0 | divided_by: imageTablet.width | times: 100.0 -%}

    {%- assign imageMobile = section.settings.banner-image-mobile -%}
    {%- assign paddingTopMobile = imageMobile.height | plus: 0.0 | divided_by: imageMobile.width | times: 100.0 -%}

    {%- if imageDesktop == blank -%}
      {%- assign paddingTopDesktop = 40 -%}
    {%- endif -%}

    {%- if imageTablet == blank -%}
      {%- assign paddintTopTablet = 50 -%}
    {%- endif -%}

    {%- if imageMobile == blank -%}
      {%- assign paddingTopMobile = 55 -%}
    {%- endif -%}
    
    <div class="banner-dynamic-content__image-wrapper">
      <div class="banner-dynamic-content__image-container">
        {% if imageDesktop != blank %}
          <picture>
            {%- assign default_image = imageDesktop -%}
            {%- assign desktop_widths = '1500,1400,1300,1200,1100,1000,900,800' | split: ',' -%}
            {%- assign tablet_widths = '1200,1100,1000,900,800,700' | split: ',' -%}
            {%- assign mobile_widths = '700,600,500,400' | split: ',' -%}

            {%- assign enable_lazy = section.settings.enable_lazy_load | default: false -%}
            
            <source {% if enable_lazy %}data-class="LazyLoad"{% endif %} class="banner-dynamic-content__image-desktop" media="(min-width: 1020px)" {% if enable_lazy %}data-{% endif %}srcset="
              {%- for desktop_width in desktop_widths -%}
                https:{{- default_image | image_url: width: desktop_width }} {{ desktop_width }}w,
              {%- endfor -%}
            "/>
            
            {%- if imageTablet != blank -%}
              {%- assign default_image = imageTablet -%}
            {%- endif -%}
            
            <source {% if enable_lazy %}data-class="LazyLoad"{% endif %} class="banner-dynamic-content__image-tablet" media="(min-width: 768px)" {% if enable_lazy %}data-{% endif %}srcset="
              {%- for tablet_width in tablet_widths -%}
                https:{{- default_image | image_url: width: tablet_width }} {{ tablet_width }}w,
              {%- endfor -%}
            "/>
            
            {%- if imageMobile != blank -%}
              {%- assign default_image = imageMobile -%}
            {%- endif -%}
          
            <source {% if enable_lazy %}data-class="LazyLoad"{% endif %} class="banner-dynamic-content__image-mobile" media="(max-width: 767px)" {% if enable_lazy %}data-{% endif %}srcset="
              {%- for mobile_width in mobile_widths -%}
                https:{{- default_image | image_url: width: mobile_width }} {{ mobile_width }}w,
              {%- endfor -%}
            "/>
            
            <img width="375" height="460" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" alt="Banner"/>

          </picture>
        {% else %}
          {%-
            render 'responsive-image' with
            placeholder: 'lifestyle-2'
          -%}
        {% endif %}
      </div>
    </div>

    <div class="banner-dynamic-content__block-text-wrapper">
      {{ text_block }}
    </div>
  </div>
</section>

